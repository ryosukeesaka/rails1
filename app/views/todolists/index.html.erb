<!DOCTYPE html>
<html lang=ja>
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="application.css">
  <title>Bookers</title>
</head>
<body>

<h1>Books</h1>

<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>
<% @lists.each do |list| %>
<tr>
  <td><%= link_to list.title, todolist_path(list.id) %></td>
    <td><%=link_to list.body, todolists_path(list.id) %></td>

    <td>
      <%= link_to "show", todolist_path(list.id) %>
      <%= link_to "Edit", edit_todolist_path(list.id) %>
      <%= link_to "Destroy", destroy_todolist_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
  </tr>
  <% end %>
</tbody>
</table>


<h2>New Book</h2>

<%= form_for @list, url: todolists_path do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %><br>

<%= f.submit "Creat Book" %>
<% if @list.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% end %>

</body>
</html>
